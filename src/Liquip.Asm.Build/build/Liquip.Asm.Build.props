<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <LiquipAsmFrameworkPath>$(IntermediateOutputPath)liquip-asm\</LiquipAsmFrameworkPath>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(OS)' != 'Windows_NT' ">
    <YasmPath Condition="'$(YasmPath)' == '' OR !Exists('$(YasmPath)')">/usr/bin/yasm</YasmPath>
    <LdPath Condition="'$(LdPath)' == '' OR !Exists('$(LdPath)')">/usr/bin/ld</LdPath>
  </PropertyGroup>

  <PropertyGroup>
    <LiquipAsmTasksAssembly
      Condition="'$(LiquipAsmTasksAssembly)' == '' OR !Exists('$(LiquipAsmTasksAssembly)')">$(MSBuildThisFileDirectory)\lib\net8.0\Liquip.Asm.Build.dll
    </LiquipAsmTasksAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Liquip.Asm.Build.Tasks.YasmBuildTask" AssemblyFile="$(LiquipAsmTasksAssembly)"/>
  <UsingTask TaskName="Liquip.Asm.Build.Tasks.LdTask" AssemblyFile="$(LiquipAsmTasksAssembly)"/>


</Project>
